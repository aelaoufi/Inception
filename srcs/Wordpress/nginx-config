server {
    listen 80;
    server_name your_domain.com;

    root /path/to/your/wordpress;
    index index.php;

    location / {
        try_files $uri $uri/ /index.php?$args;
    }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/run/php/php7.3-fpm.sock; # Adjust the PHP version if needed
    }

    location ~ /\.ht {
        deny all;
    }
}
